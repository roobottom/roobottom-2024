{% macro errorSummary(params) %}
<div class="error-summary" role="alert">
  <h2 class="error-summary-title">{{ params.title or "Sorry, there is a problem" }}</h2>
  <ul class="error-summary-list">
  {% for item in params.items %}
    <li><a href="#{{ item.id }}" class="error-summary-link">{{ item.title }}</a></li>
  {% endfor %}
  </ul>
</div>
{% endmacro %}
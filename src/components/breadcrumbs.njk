{% macro breadcrumbs(params) %}
<div class="breadcrumbs {{ params.classes }}">
  <ol>
  {% for item in params.items %}
    {% if item.title %}
    <li>
    {% if item.url -%}
      <a href="{{ item.url }}">{{ item.title }}</a>
    {%- else -%}
      {{ item.title }}
    {%- endif %}
    </li>
    {% endif %}
  {% endfor %}
  </ol>
</div>
{% endmacro %}
{
  "name": "roobottom-com",
  "version": "2024.0.0",
  "description": "Jonâ€™s Website, built in 2024",
  "main": "server.js",
  "nodemonConfig": {
    "watch": [
      "lib",
      "src",
      "app.js"
    ],
    "ext": "js,njk,json"
  },
  "scripts": {

    "build": "node build.js && node compile-less.js",
    "start": "node server.js",

    "watch:build": "nodemon --watch 'src/' --exec 'npm run build'",
    "watch:server": "nodemon --watch 'server/' --exec 'npm run start'",
    "build-css": "node compile-less.js",
    "watch-css": "node compile-less.js --watch",
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:server\" \"npm run watch-css\""
  },
  "author": "Jon Roobottom",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "moment": "^2.30.1",
    "number-to-words": "^1.2.4",
    "nunjucks": "^3.2.4",
    "slugify": "^1.6.6",
    "smartypants": "^0.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "less": "^4.2.0",
    "nodemon": "^3.1.0"
  }
}
